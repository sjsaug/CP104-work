# Imports

# Constants


def main():
    pr = float(input())
    num = int(input())
    inst = float(input())

    monthly = pr*((inst*(1+inst)**(num/12))/((1+inst)**(num/12)-1))
    print(f'The monthly payments are : ${monthly}')
    
    

main()
