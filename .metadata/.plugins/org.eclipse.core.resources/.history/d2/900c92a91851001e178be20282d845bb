# Imports

# Constants


def main():
    pr = float(input())
    inst = float(input())
    num = int(input())

    monthly = pr*(((inst/12)*(1+(inst/12))**(num/12))/((1+(inst/12))**(num/12)-1))
    print(f'The monthly payments are : ${monthly}')
    
    

main()
